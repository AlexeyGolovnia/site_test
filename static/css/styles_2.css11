
body {
    font-family: Arial, sans-serif;
    background-color: #c0d2f0;
    color: #040404;
    margin: 0;
    padding: 0;
    height: 100vh;
    display: flex;
    flex-direction: column;
    /* max-width: 1170px; */
}

header {
    background-color: #0a8da4;
    padding: 10px 0;
}

nav ul {
    list-style-type: none;
    padding: 0;
    text-align: center;
}

nav ul li {
    display: inline;
    margin: 0 15px;
}

nav ul li a {
    color: #FFFFFF;
    text-decoration: none;
    font-weight: bold;
}

main {
    flex: 1; /* Allow the main content to take the remaining space */
    display: flex;
    flex-direction: column;
    justify-content: center; /* Center the content vertically */
    align-items: center;
    text-align: center;
    width: 100%; /* Ensure it takes the full width */
}

.intro {
    display: flex;
    justify-content: space-between; /* Changed from center to space-between */
    align-items: flex-end; /* Align items to the bottom */
    width: 100%; /* Ensure it takes the full width */
}

.intro-text {
    max-width: 50%;
    padding: 20px;
}

.intro-photo {
    display: flex;
    align-items: flex-end; /* Align the image to the bottom of the container */
}

.intro-photo img {
    height: 30vh; /* 80% of the viewport height */
    max-width: 100%; /* Maintain aspect ratio */
    object-fit: cover; /* Ensure the image covers the height */
}

.intro h1 {
    font-size: 2.5em;
    margin: 0.5em 0;
}

.intro p {
    font-size: 1.2em;
    margin: 0.5em 0;
}

button {
    background-color: #1E90FF;
    color: #FFFFFF;
    border: none;
    padding: 10px 20px;
    font-size: 1em;
    cursor: pointer;
    margin-top: 20px;
}

button:hover {
    background-color: #1C86EE;
}

.social-links {
    margin-top: 20px;
}

.social-links a {
    margin: 0 10px;
    display: inline-block;
}

.social-links img {
    width: 24px;
    height: 24px;
}

.intro-photo {
    display: flex;
    align-items: flex-end; /* Align the image to the bottom of the container */
}

.intro-photo img {
    height: 100vh; /* Full viewport height */
    max-width: 100%; /* Maintain aspect ratio */
    object-fit: cover; /* Ensure the image covers the entire height */
}

.contact-info {
    margin-top: 20px;
    font-size: 1.2em;
}



/* Добавьте это в конец вашего styles.css */

.portfolio {
    text-align: center;
    padding: 50px 0;
}

.portfolio h1 {
    font-size: 2.5em;
    margin-bottom: 30px;
}

.projects {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

.project {
    background-color: #1C1C1C;
    margin: 15px;
    padding: 20px;
    border-radius: 8px;
    width: 300px;
    text-align: left;
}

.project img {
    width: 100%;
    height: auto;
    border-radius: 4px;
}

.project h2 {
    font-size: 1.5em;
    margin-top: 15px;
}

.project p {
    font-size: 1em;
    margin-top: 10px;
}
